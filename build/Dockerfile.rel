ARG centos=7
ARG image=php7-7.1

FROM aursu/pearbuild:${centos}-${image}

RUN yum -y install \
        pcre-devel \
    && yum clean all && rm -rf /var/cache/yum /var/cache/dnf

RUN yum -y --disablerepo=* --enablerepo=custom install \
        php7-pecl-apcu-devel \
    && yum clean all && rm -rf /var/cache/yum /var/cache/dnf
